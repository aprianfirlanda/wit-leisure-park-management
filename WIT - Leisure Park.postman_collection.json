                  "const baseUrl = pm.environment.get(\"BASE_URL\");",
                  "const token = pm.environment.get(\"MANAGER_ACCESS_TOKEN\");",
                  "",
                  "pm.sendRequest({",
                  "    url: baseUrl + \"/api/cages\",",
                  "    method: \"POST\",",
                  "    header: {",
                  "        \"Content-Type\": \"application/json\",",
                  "        \"Authorization\": \"Bearer \" + token",
                  "    },",
                  "    body: {",
                  "        mode: \"raw\",",
                  "        raw: JSON.stringify({",
                  "            code: \"AUTO-CAGE-\" + Date.now(),",
